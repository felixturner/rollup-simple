{
	"name": "rollup-simple",
	"version": "1.0.0",
	"description": "Simple Rollup ES6 JS build with babel, uglify, local server, live reload and sourcemaps",
	"author": "Felix Turner <felix@airtightinteractive.com> (@felixturner)",
	"license": "ISC",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git://github.com/felixturner/rollup-simple.git"
	},
	"scripts": {
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"dev": "npm-run-all --parallel start watch",
		"start": "serve dist"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"npm-run-all": "^4.1.3",
		"rollup": "^0.66.6",
		"rollup-plugin-babel": "^4.0.3",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-livereload": "^0.6.0",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-replace": "^2.1.0",
		"rollup-plugin-uglify": "^6.0.0",
		"serve": "^10.0.2"
	}
}
