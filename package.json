{
	"name": "rollup-simple",
	"version": "1.0.0",
	"description": "Simple Rollup ES6 JS build with babel, uglify, local server, live reload and sourcemaps",
	"author": "Felix Turner <felix@airtightinteractive.com> (@felixturner)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/felixturner/rollup-simple.git"
	},
	"scripts": {
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"dev": "npm-run-all --parallel start watch",
		"start": "serve dist"
	},
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@babel/preset-env": "^7.4.3",
		"npm-run-all": "^4.1.5",
		"rollup": "^1.10.0",
		"rollup-plugin-babel": "^4.3.2",
		"rollup-plugin-commonjs": "^9.3.4",
		"rollup-plugin-copy": "^1.1.0",
		"rollup-plugin-livereload": "^1.0.0",
		"rollup-plugin-node-resolve": "^4.2.3",
		"rollup-plugin-replace": "^2.2.0",
		"rollup-plugin-uglify": "^6.0.2",
		"serve": "^11.0.0"
	}
}
